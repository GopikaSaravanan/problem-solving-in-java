import java.util.*;
public class Main
{
	public static void main(String[] args) {
		Scanner scan=new Scanner(System.in);
		int n=scan.nextInt();
		int[] a=new int[n];
		int[] b=new int[n];
		int result=0;
		for(int i=0;i<n;i++)
		{
		    a[i]=scan.nextInt();
		    b[i]=scan.nextInt();
		}
		for(int i=0;i<n;i++)
		{
		    for(int j=0;j<n;j++)
		    {
		        if(i==j)
		        {
		            result=a[i]+b[i];
		        }
		    }
		    System.out.println(result);
		    result=0;
		}
	}
}
