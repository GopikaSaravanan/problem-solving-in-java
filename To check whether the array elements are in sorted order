import java.util.*;
public class Main
{
	public static void main(String[] args) {
	    Scanner scan=new Scanner(System.in);
	    int n=scan.nextInt();
	    int a[]=new int[n];
	    int count=0;
	    for(int i=0;i<n;i++)
	    {
	        a[i]=scan.nextInt();
	    }
	    for(int i=0;i<n-1;i++)
	    {
	        if(a[i]<a[i+1])
	        {
	            count++;
	        }
	    }
	    if(count==a.length-1)
	       System.out.println(1);
	    else
	       System.out.println(0);
	}
}
